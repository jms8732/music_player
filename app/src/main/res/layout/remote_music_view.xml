<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/remote_view_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/album_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/remote_view_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/remote_view_titie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:singleLine="true"
            android:ems="11"
            android:textColor="@android:color/white"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/remote_view_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:ems="11"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="11dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/remote_view_rewind"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rewind_white" />

            <ImageView
                android:id="@+id/remote_view_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/play_white" />

            <ImageView
                android:id="@+id/remote_view_forward"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/forward_white" />

            <ImageView
                android:id="@+id/remote_view_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/close_white" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>