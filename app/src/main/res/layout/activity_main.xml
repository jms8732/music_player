<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="musicView"
            type="com.example.myapplication.MusicViewModel" />
        <variable
            name="handler"
            type="com.example.myapplication.HandleListener" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/thumbnail_show"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:listitem="@layout/item_list_row" />

        <include
            android:id="@+id/music_detail"
            layout="@layout/music_detail_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"></include>

        <com.skydoves.transformationlayout.TransformationLayout
            android:id="@+id/thumbnail_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view"
            app:transformation_duration="450"
            app:transformation_fitMode="auto"
            android:onClick="@{(view) -> handler.onTransform(view)}"
            android:visibility="@{musicView.oncePlay == true ? View.VISIBLE : View.GONE}"
            app:transformation_targetView="@+id/music_detail">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_dark">

                <ImageView
                    android:id="@+id/thumbnail_music_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:loadUrl="@{musicView.albumId}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/thumbnail_music_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/thumbnail_music_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:ems="15"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@{musicView.title}"
                        android:textColor="@android:color/white"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/thumbnail_music_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@{musicView.artist}"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/thumbnail_music_play"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:playThumbnail="@{musicView.play}"
                    android:onClick="@{() -> handler.onClick(musicView.currentMusic)}"/>

            </RelativeLayout>

        </com.skydoves.transformationlayout.TransformationLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
