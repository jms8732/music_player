<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="music"
            type="com.example.myapplication.Music" />
        <variable
            name="handler"
            type="com.example.myapplication.HandleListener" />
        <variable
            name="holder"
            type="com.example.myapplication.Adapter.MyHolder" />
        <variable
            name="musicView"
            type="com.example.myapplication.MusicViewModel" />
        <import type="com.example.myapplication.Util"/>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:onClick="@{() -> handler.onRecycleLayoutClick(music,holder)}">


        <ImageView
            android:id="@+id/recycler_music_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
            android:loadImage="@{music.album_id}"
            android:onSwipe="@{holder}"/>

        <es.claucookie.miniequalizerlibrary.EqualizerView
            android:id="@+id/equalizer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:animDuration="3500"
            app:foregroundColor="@android:color/darker_gray"
            android:layout_toRightOf="@id/recycler_music_image"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/equalizer"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{music.title}"
                android:ellipsize="marquee"
                android:textColor="@android:color/white"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/recycler_music_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@{music.artist}"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_music_duration"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:text="@{Util.convertDuration(music.duration)}"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
</layout>