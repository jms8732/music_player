<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.example.musicplayer.MusicViewModel" />

        <variable
            name="listener"
            type="com.example.musicplayer.MacroListener" />
        <import type="com.example.musicplayer.Util"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:id="@+id/music_detail_layout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/music_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:loadThumbnail="@{model.album}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/music_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@android:color/white"
                android:secondaryProgressTint="@android:color/white"
                android:thumbTint="@android:color/holo_orange_dark"
                android:progress="@{model.currentDuration}"
                android:max="@{model.totalDuration}"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/current_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/white"
                    android:text="@{Util.convertDuration(model.currentDuration)}"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/total_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:text="@{Util.convertDuration(model.totalDuration)}"
                    android:textSize="9dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/music_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:text="@{model.title}"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:text="@{model.artist}"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/repeat"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/repeat"
                    android:setLoop="@{model.loop}"
                    android:onClick="@{()-> listener.rawItemClick(-4)}"/>


                <ImageView
                    android:id="@+id/fast_rewind"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/rewind"
                    android:onClick="@{() -> listener.rawItemClick(-2)}"
                    android:scaleType="centerInside"/>

                <ImageView
                    android:id="@+id/detail_play"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:buttonStatus="@{model.status}"
                    android:onClick="@{() -> listener.rawItemClick(-1)}"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"/>

                <ImageView
                    android:id="@+id/fast_forward"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/forward"
                    android:background="@android:color/transparent"
                    android:onClick="@{() -> listener.rawItemClick(-3)}"
                    android:scaleType="centerInside"/>


                <ImageView
                    android:id="@+id/loop"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:setSequential="@{model.sequential}"
                    android:onClick="@{()->listener.rawItemClick(-5)}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mute"/>

                <SeekBar
                    android:id="@+id/speaker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="15"
                    android:progressBackgroundTint="@android:color/white"
                    android:secondaryProgressTint="@android:color/white"
                    android:thumbTint="@android:color/holo_orange_dark" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/volume_up"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>