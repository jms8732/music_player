<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.myapplication.MainViewModel" />
        <variable
            name="handler"
            type="com.example.myapplication.HandleListener" />
        <import type="com.example.myapplication.Util"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:id="@+id/music_detail_layout"
        android:orientation="vertical"
        android:padding="25dp">

        <ImageView
            android:id="@+id/music_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:loadUrl="@{viewModel.image}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/music_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@android:color/white"
                android:secondaryProgressTint="@android:color/white"
                android:progress="@{viewModel.progress}"
                android:max="@{viewModel.total_duration}"
                android:thumbTint="@android:color/holo_orange_dark" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/current_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@{Util.convertDuration(viewModel.progress)}"
                    android:textColor="@android:color/white"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/total_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@{Util.convertDuration(viewModel.total_duration)}"
                    android:textColor="@android:color/white"
                    android:textSize="9dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/music_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@{viewModel.title}"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:text="@{viewModel.artist}"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/repeat"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/shuffle_white" />


                <ImageView
                    android:id="@+id/fast_rewind"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/music_image_button"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/rewind_white"
                    android:onClick="@{()->handler.onForwardRewindClick(1)}"/>

                <ImageView
                    android:id="@+id/detail_play"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/music_image_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:playDetail="@{viewModel.thumbnailPlay}"
                    android:onClick="@{() -> handler.onClick(viewModel.currentMusic)}"/>

                <ImageView
                    android:id="@+id/fast_forward"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/music_image_button"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/forward_white"
                    android:onClick="@{() -> handler.onForwardRewindClick(0)}"/>


                <ImageView
                    android:id="@+id/loop"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:loadLoopImage="@{viewModel.loop}"
                    android:onClick="@{() -> handler.onClickLoop(viewModel.loop)}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/volume_mute_white" />

                <SeekBar
                    android:id="@+id/speaker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:progress="@{viewModel.speaker}"
                    android:progressBackgroundTint="@android:color/white"
                    android:secondaryProgressTint="@android:color/white"
                    android:thumbTint="@android:color/holo_orange_dark" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/volume_up_white" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>